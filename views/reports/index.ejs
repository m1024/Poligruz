                        }
                    })
                },
                dayReportSum: function (item) {
                    var sum = 0;
                    if (this.dayReportData) {
                        for (var key in this.dayReportData) {
                            sum += parseInt(this.dayReportData[key][item]);
                        }
                    }
                    return sum;
