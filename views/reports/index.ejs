            },
            methods: {
                getReport: function () {
                    socket.emit('command', {
                        name: 'getReport_periodReport',
                        data: {
                            date: this.dayReportDate,
                            dateEnd: this.dayReportDateEnd,
                            parameters: {
                                isNeedAddManager: this.isNeedAddManager,
                                isNeedAddCompany: this.isNeedAddCompany,
                                isNeedAddFromRegion: this.isNeedAddFromRegion,
